<%- include('partials/header') %>

<section class="max-w-3xl mx-auto px-6 py-12">
  <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">✍️ Add a New Blog</h1>

  <form action="/add-blog" method="POST" class="space-y-6 bg-white shadow-md p-6 rounded-lg">
    <div>
      <label for="title" class="block text-sm font-medium text-gray-700">Blog Title</label>
      <input type="text" id="title" name="title" placeholder="Enter blog title" required
        class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2">
    </div>

    <div>
      <label for="body" class="block text-sm font-medium text-gray-700">Content</label>
      <textarea id="body" name="body" rows="6" placeholder="Write your blog content here..." required
        class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2"></textarea>
    </div>

    <button type="submit"
      class="w-full bg-blue-600 text-white py-3 rounded-md hover:bg-blue-700 transition">Publish Blog</button>
  </form>
</section>

<%- include('partials/footer') %>



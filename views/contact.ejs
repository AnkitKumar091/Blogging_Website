<%- include('partials/header') %>

<div class="container" style="max-width:600px; margin:auto; padding:20px;">
  <h1>Contact Us</h1>
  <p>Feel free to reach out to us using the form below:</p>

  <form action="/contact" method="POST" style="display:flex; flex-direction:column; gap:12px;">
    <label for="name"><b>Name</b></label>
    <input type="text" id="name" name="name" placeholder="Enter your name" required>

    <label for="email"><b>Email</b></label>
    <input type="email" id="email" name="email" placeholder="Enter your email" required>

    <label for="message"><b>Message</b></label>
    <textarea id="message" name="message" rows="5" placeholder="Write your message here..." required></textarea>

    <button type="submit" style="padding:10px 20px; background:#007bff; color:white; border:none; cursor:pointer;">
      Send Message
    </button>
  </form>
</div>

<%- include('partials/footer') %>

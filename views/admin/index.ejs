<%- include('partials/header') %>

<h1 class="text-4xl font-bold mb-8">📚 All Blogs</h1>

<ul class="space-y-6">
  <% data.forEach(post => { %>
    <li class="p-4 bg-gray-100 rounded-lg shadow">
      <h2 class="text-2xl font-semibold text-blue-700">
        <a href="/post/<%= post._id %>"><%= post.title %></a>
      </h2>
      <p class="text-gray-700 mt-2"><%= post.body.substring(0, 100) %>...</p>
      <a href="/post/<%= post._id %>" class="text-blue-500 hover:underline">Read More →</a>
    </li>
  <% }) %>
</ul>

<!-- Pagination Controls -->
<div class="mt-6 flex gap-4 justify-center">
  <% if (current > 1) { %>
    <a href="/?page=<%= current - 1 %>"
       class="inline-block bg-gray-200 text-blue-700 font-medium py-2 px-4 rounded hover:bg-gray-300 transition">
      ⬅️ Previous
    </a>
  <% } %>

  <% if (nextPage) { %>
    <a href="/?page=<%= nextPage %>"
       class="inline-block bg-gray-200 text-blue-700 font-medium py-2 px-4 rounded hover:bg-gray-300 transition">
      Next ➡️
    </a>
  <% } %>
</div>

<!-- Add New Blog Button -->
<div class="mt-10 text-center">
  <a href="/add-blog"
     class="inline-block bg-green-600 text-white py-3 px-6 rounded-lg hover:bg-green-700 transition">
    ➕ Add New Blog
  </a>
</div>

<%- include('partials/footer') %>

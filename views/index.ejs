<%- include('partials/header') %>

<h1 class="text-4xl font-bold mb-8">📚 All Blogs</h1>

<ul class="space-y-6">
  <% data.forEach(post => { %>
    <li class="p-6 bg-gray-100 rounded-lg shadow hover:shadow-md transition">
      <h2 class="text-2xl font-semibold text-blue-700 mb-2">
        <a href="/post/<%= post._id %>" class="hover:underline"><%= post.title %></a>
      </h2>
      <p class="text-gray-700 mb-4"><%= post.body.substring(0, 150) %>...</p>

      <div class="flex items-center gap-4">
        <a href="/post/<%= post._id %>" class="text-blue-500 hover:underline font-medium">📖 Read More</a>
        <a href="/edit-blog/<%= post._id %>" class="text-yellow-600 hover:underline font-medium">✏️ Edit</a>

        <form action="/delete-blog/<%= post._id %>?_method=DELETE" method="POST" class="inline">
          <button type="submit"
            class="text-red-600 hover:underline font-medium"
            onclick="return confirm('Are you sure you want to delete this blog?');">
            🗑️ Delete
          </button>
        </form>
      </div>
    </li>
  <% }) %>
</ul>

<div class="mt-10">
  <a href="/add-blog"
    class="inline-block bg-green-600 text-white py-3 px-6 rounded-lg hover:bg-green-700 transition">
    ➕ Write a New Blog
  </a>
</div>

<!-- ✅ Added View All Blogs Button -->
<div class="mt-10">
  <a href="/all-blogs"
    class="inline-block bg-blue-600 text-white py-3 px-6 rounded-lg hover:bg-blue-700 transition">
    📖 View All Blogs
  </a>
</div>

<%- include('partials/footer') %>


<%- include('partials/header') %>

<h1 class="display-4 mb-4 text-center">📚 All Blogs</h1>

<div class="row">
  <% data.forEach(post => { %>
    <div class="col-md-6 mb-4">
      <div class="card h-100 shadow">
        <div class="card-body">
          <h5 class="card-title text-primary"><%= post.title %></h5>
          <p class="card-text"><%= post.body.substring(0, 150) %>...</p>
          <a href="/post/<%= post._id %>" class="btn btn-sm btn-outline-primary">📖 Read More</a>
          <a href="/edit-blog/<%= post._id %>" class="btn btn-sm btn-outline-warning">✏️ Edit</a>
          <form action="/delete-blog/<%= post._id %>?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this blog?');">🗑️ Delete</button>
          </form>
        </div>
      </div>
    </div>
  <% }) %>
</div>

<div class="text-center mt-5">
  <a href="/add-blog" class="btn btn-success btn-lg">➕ Write a New Blog</a>
  <a href="/all-blogs" class="btn btn-primary btn-lg ms-2">📖 View All Blogs</a>
</div>

<%- include('partials/footer') %>


